  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #111;
    }
    .book {
      width: 600px;
      height: 400px;
      perspective: 1500px;
    }
    .page {
      width: 100%;
      height: 100%;
      background: white;
      position: absolute;
      transform-origin: left center;
      transition: transform 1s;
      box-shadow: 0 0 15px rgba(0,0,0,0.5);
    }
    .page img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .flipped {
      transform: rotateY(-180deg);
    }
  </style>
